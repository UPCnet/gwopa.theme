<?xml version="1.0" encoding="utf-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
       xmlns:css="http://namespaces.plone.org/diazo/css"
       xmlns:xhtml="http://www.w3.org/1999/xhtml"
       xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
       xmlns:xi="http://www.w3.org/2001/XInclude">


  <!-- Include barceloneta's backend.xml for backend theming. -->
  <rules css:if-not-content="body.viewpermission-view, body.template-edit, body.viewpermission-none, body.viewpermission-add-portal-content, body.viewpermission-set-own-password, body.template-personal-preferences, body.template-personal-information, body.template-setup_home, body.template-folder_contents">
    <xi:include href="backend.xml" />
  </rules>

    <!-- Template for login, logout -->
    <rules css:if-content="body.template-login_failed, body.template-login_form, body.template-logged_out">
        <theme href="login.html" />
        <drop css:content=".documentFirstHeading" />
        <!-- Portlets Central column -->
        <replace css:theme="#content-container" method="raw">
            <section id="main-content" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main-content">
                <xsl:apply-templates css:select="#content" />
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <xsl:copy-of css:select="#viewlet-below-content" />
                    </div>
            </section>
        </replace>
    </rules>

  <!-- Include theme for frontend theming. -->
  <rules css:if-content="body.viewpermission-view, body.template-edit, body.viewpermission-none, body.viewpermission-add-portal-content, body.viewpermission-set-own-password, body.template-personal-preferences, body.template-personal-information, body.template-setup_home, body.template-folder_contents">

    <theme href="index.html" />
<!--     <notheme css:if-not-content="#visual-portal-wrapper" /> -->

    <!-- <rules css:if-content="body.portaltype-workplan">
        <drop css:content="head script" />
    </rules> -->


    <rules css:if-content="#portal-top">
      <!-- Attributes -->
      <copy attributes="*" css:theme="html" css:content="html" />
      <!-- Base tag -->
      <before css:theme="title" css:content="base" />
      <!-- Title -->
      <replace css:theme="title" css:content="title" />
      <!-- Pull in Plone Meta -->
      <!-- <after css:theme-children="head" css:content="head meta" /> -->
      <!-- Don't use Plone icons, use the theme's -->
      <drop css:content="head link[rel='apple-touch-icon']" />
      <drop css:content="head link[rel='shortcut icon']" />
      <!-- drop the theme stylesheets -->
      <drop theme="/html/head/link[rel='stylesheet']" />
      <!-- CSS -->
      <after css:theme-children="head" css:content="head link" />
      <!-- Script -->

      <!-- <drop css:content="head script[data-bundle='basic']" /> -->
      <!-- <after css:theme-children="head" css:content="head script" /> -->

      <!-- <before content="/html/head/script" theme-children="/html/head" /> -->
          <!-- ... before your own scripts -->
          <before theme="/html/body">
              <xsl:apply-templates select="/html/head/script" />
          </before>
    </rules>

    <!-- Copy over the id/class attributes on the body tag. This is important for per-section styling -->
    <copy attributes="*" css:content="body" css:theme="body" />

    <!-- move global nav -->
    <replace css:theme-children="#mainnavigation" css:content-children="#portal-mainnavigation" method="raw" />

    <!-- full-width breadcrumb -->
    <replace css:content="#viewlet-above-content" css:theme="#above-content" />

    <!-- Central column -->
    <replace css:theme="#content-container" method="raw">

      <xsl:variable name="central">
        <xsl:if test="//aside[@id='portal-column-one'] and //aside[@id='portal-column-two']">col-xs-11 col-sm-8</xsl:if>
        <xsl:if test="//aside[@id='portal-column-two'] and not(//aside[@id='portal-column-one'])">col-xs-11 col-sm-10</xsl:if>
        <xsl:if test="//aside[@id='portal-column-one'] and not(//aside[@id='portal-column-two'])">col-xs-11 col-sm-10</xsl:if>
        <xsl:if test="not(//aside[@id='portal-column-one']) and not(//aside[@id='portal-column-two'])">col-xs-11 col-sm-12</xsl:if>
      </xsl:variable>

      <div class="{$central}">
        <xsl:apply-templates css:select="#global_statusmessage" />
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <xsl:apply-templates css:select="#content" />
          </div>
        </div>
        <footer class="row">
          <div class="col-xs-12 col-sm-12">
            <xsl:copy-of css:select="#viewlet-below-content" />
          </div>
        </footer>
      </div>
    </replace>

    <!-- Left column -->
    <rules css:if-content="#portal-column-one">
      <replace css:theme="#column1-container">
          <div id="sidebar" class="col-xs-1 col-sm-2 sidebar-offcanvas">
            <aside id="portal-column-one">
                <xsl:copy-of css:select="#portal-column-one > *" />
            </aside>
          </div>
      </replace>
    </rules>

    <!-- Right column -->
    <rules css:if-content="#portal-column-two">
      <replace css:theme="#column2-container">
          <div class="col-xs-1 col-sm-2 sidebar-offcanvas" role="complementary">
            <aside id="portal-column-two">
                <xsl:copy-of css:select="#portal-column-two > *" />
            </aside>
          </div>
      </replace>
    </rules>

    <!-- Content header -->
    <replace css:theme="#portal-top" css:content-children="#portal-top" />

    <!-- Footer -->
    <replace css:theme-children="#portal-footer" css:content-children="#portal-footer-wrapper" />

    <!-- toolbar -->
    <replace css:theme="#portal-toolbar" css:content-children="#edit-bar" css:if-not-content=".ajax_load" css:if-content=".userrole-authenticated" />
    <replace css:theme="#anonymous-actions" css:content-children="#portal-personaltools-wrapper" css:if-not-content=".ajax_load" css:if-content=".userrole-anonymous" />


  </rules>
</rules>
